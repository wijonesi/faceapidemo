<Window x:Class="WpfAppCognitiveServices.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppCognitiveServices"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid x:Name="BackPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Image x:Name="imgPhoto" Stretch="Uniform" Margin="0,0,0.2,29.8" Grid.RowSpan="2" />
        <Image x:Name="imgMatch" Stretch="Uniform" Grid.Row="1" Grid.Column="2" VerticalAlignment="Top" />
        <TextBox x:Name="imgAttributes" Grid.Column="2"  />
        <Button x:Name="btnBrowse" Margin="20,0,20.2,4.8" Grid.Row="3"  Height="20" VerticalAlignment="Bottom" Content="Browse..." Click="btnBrowse_Click" />
        <Button x:Name="btnMathc" Margin="20,0,20.2,4.8" Grid.Row="3" Grid.Column="2" VerticalAlignment="Bottom" Content="Match..." Click="btnMathc_Click" />
    </Grid>
</Window>
